<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agent Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="font-'helvetica_now_display' m-0 p-0">

    <div class="w-full min-h-screen flex justify-center px-10 py-10 bg-zinc-50">

        <div class="w-full max-w-5xl">

            <!-- HEADER -->
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-3xl font-medium">Agent Dashboard</h2>
                    <p class="text-sm text-zinc-500">
                        Open customer support tickets
                    </p>
                </div>

                <a
                    href="/agent/logout"
                    class="text-sm text-red-500 hover:underline"
                >
                    Logout
                </a>
            </div>

            <!-- TICKETS LIST -->
            <div class="bg-white border border-zinc-200 rounded-xl overflow-hidden">

                <% if (tickets.length === 0) { %>
                    <div class="p-6 text-center text-zinc-500">
                        No open tickets right now.
                    </div>
                <% } %>

                <% tickets.forEach(ticket => { %>
                    <div class="flex items-center justify-between p-5 border-b border-zinc-100">

                        <!-- LEFT -->
                        <div>
                            <p class="font-medium text-zinc-900">
                                <%= ticket.customerName %>
                            </p>
                            <p class="text-sm text-zinc-500 mt-1">
                                <%= ticket.issue %>
                            </p>
                            <p class="text-xs text-zinc-400 mt-1">
                                Ticket ID: <%= ticket._id %>
                            </p>
                        </div>

                        <!-- RIGHT -->
                        <div class="flex items-center gap-4">
                            <span class="text-xs px-3 py-1 rounded-full bg-green-100 text-green-700">
                                Open
                            </span>

                            <a
                                href="/agent/ticket/<%= ticket._id %>"
                                class="px-5 py-2 rounded-full bg-blue-500 text-white text-sm hover:bg-blue-600"
                            >
                                Join Chat
                            </a>
                        </div>

                    </div>
                <% }) %>

            </div>

        </div>

    </div>

</body>
</html>