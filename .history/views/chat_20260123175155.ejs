<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Support Chat</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="font-'helvetica_now_display' border-box m-0 p-0 flex justify-center items-center">

    <div class="w-full h-screen flex ml-90  ">

        <div class="w-1/2 flex items-center justify-center h-screen">
            <div class="w-full px-20">

                <h4 class="text-2xl capitalize mb-1">support chat</h4>
                <p class="text-sm text-zinc-500 mb-4">
                    Ticket ID: <span class="text-zinc-800"><%= ticket._id %></span>
                </p>

                <div class="bg-zinc-100 border border-zinc-200 rounded-xl p-4 h-[60vh] flex flex-col">
                    
                    <div id="messages" class="flex-1 overflow-y-auto space-y-2 pr-2">
                        <div class="text-sm text-zinc-500 text-center mt-5">
                            Your ticket has been created. An agent will join soon.
                        </div>
                    </div>

                    <form id="chatForm" class="mt-3 flex gap-2">
                        <input
                            id="msgInput"
                            class="flex-1 bg-white px-3 py-2 border-[1px] rounded-md border-zinc-200"
                            type="text"
                            placeholder="Type your message..."
                            autocomplete="off"
                        />

                        <button
                            type="submit"
                            class="px-5 rounded-full py-2 bg-blue-500 text-white"
                        >
                            Send
                        </button>
                    </form>

                </div>

                <div class="mt-4 text-sm text-zinc-500">
                    Need to raise a new ticket?
                    <a class="text-blue-500" href="/customer/new">Create ticket</a>
                </div>

            </div>
        </div>

    </div>

    <script>
        const ticketId = "<%= ticket._id %>";

        const messagesDiv = document.getElementById("messages");
        const chatForm = document.getElementById("chatForm");
        const msgInput = document.getElementById("msgInput");

        function addMessage(text, type = "system") {
            const div = document.createElement("div");

            if (type === "me") {
                div.className = "text-sm bg-blue-500 text-white px-3 py-2 rounded-lg w-fit ml-auto";
            } else if (type === "agent") {
                div.className = "text-sm bg-white text-zinc-800 px-3 py-2 rounded-lg w-fit";
            } else {
                div.className = "text-xs text-zinc-500 text-center";
            }

            div.innerText = text;
            messagesDiv.appendChild(div);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        chatForm.addEventListener("submit", (e) => {
            e.preventDefault();
            const msg = msgInput.value.trim();
            if (!msg) return;

            addMessage(msg, "me");
            msgInput.value = "";
        });
    </script>

</body>
</html>